config LED_PWM
	bool "PWM LED driver"
	default y
	depends on PWM && DT_HAS_PWM_LEDS_ENABLED
	help
	  Enable driver for PWM LEDs.

config LED_PWM_MC
	bool "PWM Controlled Multicolor LED driver"
	default y
	depends on PWM && DT_HAS_PWM_LEDS_MULTICOLOR_ENABLED
	help
	  Enable driver for PWM-driven Multicolor LEDS
